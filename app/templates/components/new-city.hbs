{{#if addNewCity}}
  <h1>New City</h1>
    <form>
      <div class="form-group">
        <label for="name">City</label>
        {{input value=name id="name"}}
      </div>

      <div class="form-group">
        <label for="country">Country</label>
        {{input value=country id="country"}}
      </div>

      <button {{action 'save'}}>Save</button> <!--This is the start to our Action up, this click starts the process of saving the new rental to the data base. -->
    </form>
{{else}}
  <button {{action 'cityFormShow'}}>New City</button>
{{/if}}
