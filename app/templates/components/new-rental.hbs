{{#if addNewRental}}
  <h1>New Rental</h1>
    <form>
      <div class="form-group">
        <label for="owner">Owner</label>
        {{input value=owner id="owner"}}
      </div>

      <div class="form-group">
        <label for="type">Type</label>
        {{input value=type id="type"}}
      </div>

      <div class="form-group">
        <label for="bedrooms">Number of Bedrooms</label>
        {{input value=bedrooms id="bedrooms"}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image"}}
      </div>

      <button {{action 'save'}}>Save</button> <!--This is the start to our Action up, this click starts the process of saving the new rental to the data base. -->
    </form>
{{else}}
  <button {{action 'rentalFormShow'}}>New Rental</button>
{{/if}}
