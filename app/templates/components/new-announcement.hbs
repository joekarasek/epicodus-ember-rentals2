{{#if addNewAnnouncement}}
<h1>Enter a new announcement</h1>
<div>
  <form>
    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image id="image"}}
    </div>

    <div class="form-group">
      <label for="title">Announcement Title</label>
      {{input value=title id="title"}}
    </div>

    <div class="form-group">
      <label for="body">Description</label>
      {{input value=body id="body"}}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date"}}
    </div>

    <button {{action 'saveAnnouncements'}}>Save</button>
  </form>
</div>
{{else}}
  <button {{action 'announcementFormShow'}}>New Announcement</button>
{{/if}}
